{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug User Service",
        "type": "go",
        "request": "attach",
        "mode": "remote",
        "remotePath": "/workspace",
        "substitutePath": [
          {
            "from": "/workspace/cmd",
            "to": "${workspaceFolder}/user/cmd"
          }
        ],
        "port": 32345,
        "host": "127.0.0.1",
        "showLog": true,
        "trace": "verbose"
      },
      {
        "name": "Debug Order Service",
        "type": "go",
        "request": "attach",
        "mode": "remote",
        "remotePath": "/workspace",
        "substitutePath": [
          {
            "from": "/workspace/cmd",
            "to": "${workspaceFolder}/order/cmd"
          }
        ],
        "port": 32346,
        "host": "127.0.0.1",
        "showLog": true,
        "trace": "verbose"
      }
    ]
  }