FROM golang:1.21-alpine AS builder

RUN apk add --no-cache git

WORKDIR /app
COPY . .

RUN go build -gcflags="all=-N -l" -o service ./cmd/main.go

FROM golang:1.21-alpine

RUN go install github.com/go-delve/delve/cmd/dlv@latest

WORKDIR /app
COPY --from=builder /app/service .

EXPOSE 8080 2345

CMD ["/go/bin/dlv", "--listen=:2345", "--headless=true", "--api-version=2", "--accept-multiclient", "exec", "./service"]